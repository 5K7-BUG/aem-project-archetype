<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:description="Template with focus on content."
    jcr:primaryType="cq:Template"
    jcr:title="${siteName} Content Page"
    allowedChildren="[/apps/${appsFolderName}/templates/page-content]"
    allowedParents="[/apps/${appsFolderName}/templates/page-home,/apps/${appsFolderName}/templates/page-content]"
    allowedPaths="[/content/${contentFolderName}(/.*)?]"
    ranking="{Long}90">
    <jcr:content
        jcr:primaryType="cq:PageContent"
        sling:resourceType="${appsFolderName}/components/page/page-content">
        <logo
            jcr:primaryType="nt:unstructured"
            sling:resourceType="${appsFolderName}/components/page/logo"/>
        <title
            jcr:primaryType="nt:unstructured"
            sling:resourceType="${appsFolderName}/components/content/title"/>
        <topnav
            jcr:primaryType="nt:unstructured"
            sling:resourceType="${appsFolderName}/components/page/topnav"/>
        <par
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/foundation/components/parsys">
            <text
                jcr:primaryType="nt:unstructured"
                sling:resourceType="${appsFolderName}/components/content/text"/>
        </par>
    </jcr:content>
</jcr:root>
